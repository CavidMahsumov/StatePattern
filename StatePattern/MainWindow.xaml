            </Ellipse>
            
            <Slider Style="{StaticResource playSlider}"  Width="370" Margin="0,120,0,0" Height="40">
                
            </Slider>
                
           
            <WrapPanel  Margin="0,100,0,0">
                <Button Style="{StaticResource InformButton}" Margin="50,0,0,0" Width="100" Height="60">
                    
                </Button>
                <Button Style="{StaticResource InformButton}" Margin="70,0,0,0" Width="100" Height="60">

                </Button>
                <Button Style="{StaticResource InformButton}" Margin="70,0,0,0" Width="100" Height="60">

                </Button>
            </WrapPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
